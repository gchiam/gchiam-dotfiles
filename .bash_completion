# vim: set filetype=sh:


# =============================================================================
# django bash completion
# https://github.com/django/django/blob/master/extras/django_bash_completion
# =============================================================================
. ~/.django_bash_completion
test -e ~/.git-completion.bash && source ~/.git-completion.bash


# Add tab completion for SSH hostnames based on ~/.ssh/config, ignoring wildcards
[ -e "$HOME/.ssh/config" ] && complete -o "default" -o "nospace" -W "$(grep "^Host" ~/.ssh/config | grep -v "[?*]" | cut -d " " -f2)" scp sftp ssh


# Bash complection for homebrew
hash brew 2>/dev/null && (for f in `brew --prefix`/etc/bash_completion.d/*; do source $f; done)
