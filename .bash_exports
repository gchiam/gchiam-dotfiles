# vim: set filetype=sh:


export PATH

export EDITOR="`which nvim`"
export LC_CTYPE="en_US.UTF-8"
export LESS=' -R -X -F '
export LESSOPEN="| pygmentize %s"

export DOTFILES_DIR=$HOME/projects/gchiam-dotfiles

(test -d ~/work && WORK=~/work) || test -d /work && WORK=/work || WORK=~/
export WORK
alias W="cd $WORK"


###############################################################################
# virtualenvwrapper
###############################################################################
export WORKON_HOME=~/Envs
if [ -f  /usr/bin/virtualenvwrapper_lazy.sh ]; then
    source /usr/bin/virtualenvwrapper_lazy.sh
elif [ -f  /usr/bin/virtualenvwrapper.sh ]; then
    source /usr/bin/virtualenvwrapper.sh
elif [ -f  $HOME/.linuxbrew/virtualenvwrapper_lazy.sh ]; then
    source $HOME/.linuxbrew/virtualenvwrapper_lazy.sh
elif [ -f  $HOME/.linuxbrew/virtualenvwrapper.sh ]; then
    source $HOME/.linuxbrew/virtualenvwrapper.sh
elif [ -f  /usr/local/bin/virtualenvwrapper_lazy.sh ]; then
    source /usr/local/bin/virtualenvwrapper_lazy.sh
elif [ -f  /usr/local/bin/virtualenvwrapper.sh ]; then
    source /usr/local/bin/virtualenvwrapper.sh
fi


if [ -f /usr/libexec/java_home ]; then
    export JAVA_HOME=$(/usr/libexec/java_home)
    export JDK_HOME=$JAVA_HOME
fi
