# vim: set filetype=sh:
# shellcheck shell=bash disable=SC2148,SC1090,SC1091,SC2046,SC1004


export PATH

export LC_CTYPE="en_US.UTF-8"
export DOTFILES_DIR=$HOME/projects/gchiam-dotfiles

# source $DOTFILES_DIR/set_gruvbox_256palette.sh

# fzf
# https://github.com/junegunn/fzf
# Setting ag as the default source for fzf
# export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -l -g ""'

# --files: List files that would be searched but do not search
# --no-ignore: Do not respect .gitignore, etc...
# --hidden: Search hidden files and folders
# --follow: Follow symlinks
# --glob: Additional conditions for search (in this case ignore everything in the .git/ folder)
export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'


# To apply the command to CTRL-T as well
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_DEFAULT_OPTS="--color=fg:15,hl:3,hl+:11,fg+:7,bg+:4,prompt:7,pointer:7,info:6,header:3  --algo=v2"
[ -f ~/.fzf.bash ] && source ~/.fzf.bash

_asdf_init="${BREW_PREFIX:-/opt/homebrew}/opt/asdf/libexec/asdf.sh"
[[ -f "$_asdf_init" ]] && . "$_asdf_init"
[[ -f ~/.asdf/plugins/java/set-java-home.bash ]] && . ~/.asdf/plugins/java/set-java-home.bash
unset _asdf_init

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
